#!/bin/bash

# File: data_extraction_automation-0x01
# Description: Extracts Pikachu's name, type, weight, and height from data.json using jq, awk, sed

# Check if data.json exists
if [ ! -f data.json ]; then
    echo "Error: data.json not found. Please run the API request script first."
    exit 1
fi

# Extract using jq
NAME=$(jq -r '.name' data.json | sed 's/^./\U&/')
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/^./\U&/')
HEIGHT=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}')
WEIGHT=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1/10}')

# Output in required format
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
